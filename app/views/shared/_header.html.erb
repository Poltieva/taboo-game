<nav style="margin-bottom: 20px; padding: 10px; background-color: #f5f5f5; display: flex; justify-content: space-between; align-items: center;">
  <div>
    <%= link_to "Taboo", root_path, style: "font-weight: bold; font-size: 1.2em; text-decoration: none; color: #333;" %>
  </div>
  <div>
    <% if authenticated? %>
      <%= Current.session&.user&.username %> | 
      <%= button_to "Sign out", session_path, method: :delete, style: "background: none; border: none; color: blue; text-decoration: underline; cursor: pointer;" %>
    <% else %>
      <%= link_to "Sign in", new_session_path, style: "margin-right: 15px;" %>
      <%= link_to "Sign up", new_user_path %>
    <% end %>
  </div>
</nav>
